datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator photon {
  provider = "prisma-client-js"
}

model MagicCode {
  code      String   @id
  user      User
  createdAt DateTime @default(now())
}

model User {
  id          String     @default(cuid()) @id
  email       String     @unique
  displayName String?
  magicCode   MagicCode?
}
